# Example: Simple site with NO LLM (pure classic)
# This pipeline has no LLM steps at all

pipeline:
  name: simple_site_classic
  description: Simple site scraper using only classic regex/XPath (no LLM)
  steps:
    - id: fetch_listings
      component: simple_site.fetch_index
      params:
        env: null
    
    - id: fetch_details
      component: simple_site.fetch_details
      params:
        input_field: item_url
    
    # Classic normalization (regex-based)
    - id: normalize
      component: processors.unify_fields
      params:
        mapping: "${config.field_mapping}"
    
    # Standard QC (rule-based)
    - id: qc
      component: processors.qc_rules
      params:
        rules: "${config.quality}"
    
    - id: export
      component: exporters.csv_export
      params:
        output_dir: "${config.output.daily_csv_dir}"

